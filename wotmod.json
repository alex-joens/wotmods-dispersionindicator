{
    "package":  "${package}",
    "sources":  [
        {
            "method":   "apply",
            "root":     "",
            "reldir":   "",
            "files":    [ "src/meta.xml" ]
        },
        {
            "method":   "apply+python",
            "root":     "res",
            "reldir":   "scripts/client/gui/mods",
            "include":  "\\.py$$",
            "dirs":     [ "src" ]
        },
        {
            "method":   "plain",
            "root":     "res",
            "reldir":   "${resource_dir}",
            "files":    [ "src/bgimage.dds" ]
        },
        {
            "method":   "apply+copy",
            "root":     "res",
            "reldir":   "${resource_dir}",
            "replace":  [ "config-default", "default" ],
            "files":    [ "configs/config-default.json" ]
        },
        {
            "method":   "copy",
            "root":     "res",
            "reldir":   "${resource_dir}",
            "replace":  [ "config-simple", "config" ],
            "files":    [ "configs/config-simple.json" ]
        }
    ]
}
